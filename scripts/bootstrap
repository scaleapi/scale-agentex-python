#!/usr/bin/env bash

set -e

cd "$(dirname "$0")/.."

if ! command -v uv >/dev/null 2>&1 && [ -f "Brewfile" ] && [ "$(uname -s)" = "Darwin" ]; then
  brew bundle check >/dev/null 2>&1 || {
    echo "==> Installing Homebrew dependencies…"
    brew bundle
  }
fi

echo "==> Installing Python dependencies…"

uv sync --all-extras --group dev
